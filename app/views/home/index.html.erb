<% end %>

<div class="container intro">
    <div class="row">
    <!-- Container (Caramella Section) 1 -->
        <div class="col-sm-12 container-fluid">    
            <div class="row">
                <div class="col-sm-6">
                    <h2>Design & Development</h2>
