                    <img src="<%= asset_path '1.png' %>" alt="caramella" width="100%">
                </div>
            </div>
        </div>
    <!-- Container (Simply Portfolio) 2 -->
        <div class="col-sm-12 container-fluid">
            <h2>What we do</h2>
            <div class="row text-center">
                <div class="col-sm-4">
                    <div class="thumbnail">
                        <img src="<%= asset_path 'computer-vision.png'%>" alt="computer-vision" width="400" height="300">
                        <p><strong>컴퓨터 비전</strong></p>
